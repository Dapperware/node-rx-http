{
  "name": "node-rx-http",
  "version": "1.0.1",
  "description": "A simple Rx wrapper around the native Node http module",
  "main": "./lib/bundle.umd.js",
  "module": "./lib/index.js",
  "jsnext:main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "bundle": "rollup -c",
    "test": "jest",
    "clean": "rimraf lib/* && rimraf coverage/*",
    "postbuild": "npm run bundle",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build",
    "coverage": "npm run lint && jest --coverage",
    "coverage:upload": "codecov",
    "check-types": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.tests.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dapperware/node-rx-http.git"
  },
  "bugs": {
    "url": "https://github.com/Dapperware/node-rx-http/issues"
  },
  "homepage": "https://github.com/Dapperware/node-rx-http#readme",
  "keywords": [
    "rx",
    "reactive-extensions",
    "reactive-programming",
    "http",
    "rxjs"
  ],
  "author": "Paul Daniels",
  "license": "MIT",
  "dependencies": {
    "rxjs": "^6.2.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "chai": "^4.1.2",
    "jest": "^23.5.0",
    "jest-fetch-mock": "^2.0.0",
    "mocha": "^6.0.0",
    "nock": "^11.3.5",
    "prettier": "^1.14.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.26.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-jest": "^23.1.4",
    "typescript": "^2.9.2",
    "uglify-js": "^3.4.8"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": false,
        "mapCoverage": true
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"]
  }
}
